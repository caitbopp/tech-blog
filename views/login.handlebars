<div class="login-card card">
    <div class="card-header">
        Login
    </div>
    <form class="login-form card-body">
        <div class="form-group">
            <label for="username-login">Username</label>
            <input class="form-input" type="text" id="username-login" />
        </div>
        <div class="form-group">
            <label for="password-login">Password</label>
            <input class="form-input" type="password" id="password-login" />
        </div>
        <button type="submit" class="btn btn-primary">Login!</button>
        <p><a href="#" id="sign-up-btn">Sign up instead</a></p>
    </form>
</div>

<div class="create-new-login card hidden">
    <div class="card-header">
        Sign Up
    </div>
    <form id="signup-form" class="card-body">
        <label class="form-label" for="username-signup">Username</label>
        <input id="username-signup" type="text" class="form-input" />

        <label class="form-label" for="email-signup">Email</label>
        <input id="email-signup" type="text" class="form-input" />

        <label class="form-label" for="password-signup">Password</label>
        <input id="password-signup" type="password" class="form-input" />

        <button type="submit" class="btn btn-primary">Sign Up!</button>
        <a href="#" id="login-btn">Login instead</a>
    </form>
</div>

<script src="./js/login.js"></script>