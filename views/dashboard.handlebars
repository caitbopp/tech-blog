<button type="submit" class="btn">+ New Post</button>

<div class="card hidden">
    <div class="card-header">
        Create New Post
    </div>
    <form id="new-post-form" class="card-body">
        <label class="form-label" for="post-title">Title</label>
        <input id="post-title" type="text" class="form-input" />

        <label class="form-label" for="post-content">Content</label>
        <input id="post-content" type="text" class="form-input" />

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>


<!-- Do I add in another hidden card to display previously written posts? -->
<div class="card hidden">
{{#each posts as |post|}}
  <div class="card-header">
      <h5 class="post-header">{{post.title}}</h5>
      <span class="post-byline">Posted by {{username}} on {{date_created}}</span>
  <div class="card-body">
    <p class="card-text">{{post.content}}</p>
  </div>
  {{/each}}
</div>
