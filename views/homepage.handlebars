{{#each posts as |post| }}
<div class="card">
  <div class="card-header">
    {{#if logged_in}}
      <a href="/post/{{post.id}}"><h5 class="post-header">{{post.title}}</h5></a>
      {{else}}
      <h5 class="post-header">{{post.title}}</h5>
      {{/if}}
      <span class="post-byline">Posted by {{username}} on {{date_created}}</span>
  <div class="card-body">
    <p class="card-text">{{post.content}}</p>
  </div>
 
</div>
</div>
{{/each}}